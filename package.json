{
  "name": "xstviz",
  "version": "1.0.4",
  "displayName": "xstate-visualizer",
  "description": "Visualize your state machines from inside vscode.",
  "publisher": "dksedgwick",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/damiensedgwick/vscode-xstate-visualizer"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xstviz.visualizer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xstviz.visualizer",
        "title": "XState: Open Visualizer"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/app/app.tsx src/WebviewContent.ts src/extension.ts --bundle --platform=node --external:vscode --outdir=out",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "esbuild": "^0.12.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
